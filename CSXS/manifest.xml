<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="7.0" ExtensionBundleId="com.petridamsten.somnium" ExtensionBundleVersion="1.2.1"
		ExtensionBundleName="Somnium" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<ExtensionList>
		<Extension Id="com.petridamsten.somnium.panel" Version="1.0" />
    <Extension Id="com.petridamsten.somnium.dialog" Version="1.0" />
	</ExtensionList>
	<ExecutionEnvironment>
		<HostList>
            <Host Name="PHXS" Version="18" />
            <Host Name="PHSP" Version="18" />
		</HostList>
		<LocaleList>
			<Locale Code="All" />
		</LocaleList>
		<RequiredRuntimeList>
			<RequiredRuntime Name="CSXS" Version="5.0" />
		</RequiredRuntimeList>
	</ExecutionEnvironment>
	<DispatchInfoList>
		<Extension Id="com.petridamsten.somnium.panel">
			<DispatchInfo >
				<Resources>
				<MainPath>./ui/main.html</MainPath>
				<ScriptPath>./cc/main.jsx</ScriptPath>
				</Resources>
				<Lifecycle>
					<AutoVisible>true</AutoVisible>
				</Lifecycle>
				<UI>
					<Type>Panel</Type>
					<Menu>Somnium Panel</Menu>
					<Geometry>
						<Size>
							<Height>500</Height>
							<Width>350</Width>
						</Size>
                    <!--<MinSize>
                            <Height>550</Height>
                            <Width>400</Width>
                        </MinSize>
                        <MaxSize>
                            <Height>550</Height>
                            <Width>400</Width>
                        </MaxSize>-->
					</Geometry>
					<Icons>
						<Icon Type="Normal">./ui/img/iconNormal.png</Icon>
						<Icon Type="RollOver">./ui/img/iconRollover.png</Icon>
						<Icon Type="Disabled">./ui/img/iconDisabled.png</Icon>
						<Icon Type="DarkNormal">./ui/img/iconDarkNormal.png</Icon>
						<Icon Type="DarkRollOver">./ui/img/iconDarkRollover.png</Icon>
					</Icons>
				</UI>
			</DispatchInfo>
		</Extension>

    <Extension Id="com.petridamsten.somnium.dialog">
			<DispatchInfo >
				<Resources>
				<MainPath>./ui/dialog.html</MainPath>
        <ScriptPath>./cc/main.jsx</ScriptPath>
				</Resources>
				<Lifecycle>
					<AutoVisible>true</AutoVisible>
				</Lifecycle>
				<UI>
					<Type>ModalDialog</Type>
					<Geometry>
						<Size>
							<Height>800</Height>
							<Width>350</Width>
						</Size>
            <MinSize>
              <Height>100</Height>
              <Width>400</Width>
            </MinSize>
            <MaxSize>
              <Height>800</Height>
              <Width>400</Width>
            </MaxSize>
					</Geometry>
				</UI>
			</DispatchInfo>
		</Extension>
	</DispatchInfoList>
</ExtensionManifest>
